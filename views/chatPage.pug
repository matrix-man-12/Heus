extends layouts/main-layout.pug  

block content

    if errorMessage 
        span.errorMessage #{errorMessage} 
    else
        script.
            var chatId = '!{chat._id}';  
        .chatPageContainer
            .chatTitleBarContainer  
                +createChatImage(chat,userLoggedIn)
                span#chatName(data-toggle="modal",data-target="#chatNameModal") 

            .mainContentContainer
                .loadingSpinnerContainer 
                    img(src="/images/loadingSpinner.gif",alt="Spinner")
                .chatContainer(style = "visibility: hidden",data-room = chat._id)
                    ul.chatMessages

                    .typingDots
                        img(src="/images/typing.gif" , alt = "Typing")

                    .footer
                        textarea.inputTextbox(name="messsageInput",placeholder="Type a message...")
                        button.sendMessageButton
                            i.fas.fa-paper-plane
        +createChatNameModal(chat)
        
block scripts
    script(src="/js/chatPage.js")